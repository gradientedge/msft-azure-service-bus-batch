{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": false,
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "strict": true,
    "noErrorTruncation": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
